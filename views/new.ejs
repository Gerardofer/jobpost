<% include ./partials/header %>

    <div class="container">
        <div class="well well-lg">
            <h1>Log a New Job Application</h1>
            <form class="form-horizontal" action="/jobs" method="POST">
                <div class="form-group">
                    <label for="company">Company Name</label>
                    <input id="company" type="text" class="form-control" name="jobs[company]" placeholder="Company">
                </div>
                <div class="form-group">
                    <label for="position">Job Position</label>
                    <input id="position" type="text" class="form-control" name="jobs[position]" placeholder="Position">
                </div>
                <div class="form-group">
                    <label for="date">Applied On</label>
                    <input id="date" type="text" class="form-control" name="jobs[dateApplied]" placeholder="Date">
                </div>
                <div class="form-group">
                    <label for="contact">Contact Person</label>
                    <input id="contact" type="text" class="form-control" name="jobs[contact]" placeholder="Contact Person">
                </div>
                <button id="new-job" class="btn btn-lg btn-danger active">Submit</button>
            </form>
        </div>
    </div>
    </div>


    <% include ./partials/footer %>